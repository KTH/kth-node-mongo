{
  "name": "@kth/mongo",
  "version": "4.0.0",
  "description": "Database connection module for Node.js applications using Mongoose.",
  "main": "lib/index.js",
  "automaticPublish": "true",
  "scripts": {
    "codecheck": "prettier",
    "build": "./build.sh",
    "test": "npm i mongoose@6.1.4 && jest && npm uninstall mongoose",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:notify": "jest --watch --notify",
    "test:coverage": "jest --collectCoverage --detectOpenHandles",
    "clean": "rm -r ./node_modules && rm package-lock.json",
    "prepare": "if [ -f ./node_modules/.bin/husky ]; then husky install; fi"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KTH/kth-node-mongo"
  },
  "author": {
    "name": "KTH",
    "email": "infosys@kth.se",
    "url": "https://github.com/KTH"
  },
  "license": "MIT",
  "dependencies": {
    "@kth/log": "^4.0.0"
  },
  "peerdependencies": {
    "mongoose": "^6.1.4"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.17.0",
    "@kth/eslint-config-kth": "^2.0.2",
    "@types/jest": "^27.4.0",
    "ansi-regex": "^6.0.1",
    "eslint": "^7.32.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-extended": "^1.2.1",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "set-value": "^4.1.0"
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "//": "configuration version 2020-04-10 (API+NPM) - might also reside as module.exports in jest.config.js",
    "clearMocks": true,
    "notifyMode": "failure-change",
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ],
    "testEnvironment": "node",
    "verbose": true
  }
}
