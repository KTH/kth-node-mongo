{
  "name": "@kth/mongo",
  "version": "4.0.0",
  "description": "Database connection module for Node.js applications using Mongoose.",
  "main": "lib/index.js",
  "automaticPublish": "true",
  "scripts": {
    "lint": "eslint \"**/*.js\" --quiet",
    "lint-v": "eslint \"**/*.js\"",
    "codecheck": "prettier",
    "build": "./build.sh",
    "test": "npm i mongoose@6.6.0 && jest && npm uninstall mongoose",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:notify": "jest --watch --notify",
    "test:coverage": "jest --collectCoverage --detectOpenHandles",
    "clean": "rm -r ./node_modules && rm package-lock.json",
    "prepare": "if [ -f ./node_modules/.bin/husky ]; then husky install; fi"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KTH/kth-node-mongo"
  },
  "author": {
    "name": "KTH",
    "email": "infosys@kth.se",
    "url": "https://github.com/KTH"
  },
  "license": "MIT",
  "dependencies": {
    "@kth/log": "^4.0.5"
  },
  "peerdependencies": {
    "mongoose": "^6.6.0"
  },
  "overrides": {
    "semver-regex": "^3.1.3"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.18.9",
    "@kth/eslint-config-kth": "^3.0.10",
    "@types/jest": "^29.0.2",
    "ansi-regex": "^6.0.1",
    "eslint": "^8.23.1",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "jest-extended": "^3.1.0",
    "node-notifier": "^10.0.1",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "set-value": "^4.1.0"
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "//": "configuration version 2020-04-10 (API+NPM) - might also reside as module.exports in jest.config.js",
    "clearMocks": true,
    "notifyMode": "failure-change",
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ],
    "testEnvironment": "node",
    "verbose": true
  }
}
