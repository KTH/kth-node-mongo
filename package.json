{
  "name": "kth-node-mongo",
  "version": "3.3.3",
  "description": "Database connection module for Node.js applications using Mongoose.",
  "main": "lib/index.js",
  "automaticPublish": "true",
  "scripts": {
    "codecheck": "prettier",
    "preversion": "npm run codecheck && npm run test",
    "postversion": "git push && git push --tags",
    "build": "./build.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:notify": "jest --watch --notify",
    "test:coverage": "jest --collectCoverage --detectOpenHandles",
    "clean": "rm -r ./node_modules && rm package-lock.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KTH/kth-node-mongo"
  },
  "author": {
    "name": "KTH",
    "email": "infosys@kth.se",
    "url": "https://github.com/KTH"
  },
  "license": "MIT",
  "dependencies": {
    "kth-node-log": "^3.1.3",
    "mongoose": "^5.11.19"
  },
  "devDependencies": {
    "@kth/eslint-config-kth": "^1.0.10",
    "@types/jest": "^26.0.20",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.21.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0"
  },
  "eslintConfig": {
    "extends": "@kth/eslint-config-kth"
  },
  "prettier": {
    "//": "configuration version 2020-04-10 - might also reside in .prettierrc.json",
    "arrowParens": "avoid",
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "//": "configuration version 2020-04-10 (API+NPM) - might also reside as module.exports in jest.config.js",
    "clearMocks": true,
    "notifyMode": "failure-change",
    "setupFilesAfterEnv": [
      "jest-extended"
    ],
    "testEnvironment": "node",
    "verbose": true
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test",
      "pre-commit": "pretty-quick --staged"
    }
  }
}
